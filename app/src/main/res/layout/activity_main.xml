<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.a1691576.spotify.MainActivity">

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="102dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="393dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="67dp"
            android:layout_height="75dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="66dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/radioo" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      Radio"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="67dp"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.05">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="66dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/libbbbbbb" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="Your Library"
                android:textColor="@android:color/white"
                android:layout_weight="0.46" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="79dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            app:srcCompat="@drawable/search" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="347dp"
            android:layout_height="33dp"
            android:text="                      Search Spotify"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="345dp"
        android:layout_height="89dp"
        android:text="                 Find your favourite songs,artists,
               albums,podcasts,playlists and friends."
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="279dp" />

    < LinearLayout
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:background="#1a1a1a"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="13dp">

            <SearchView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.88"
                android:background="@android:color/white" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="92dp"
                android:layout_height="46dp"

                android:layout_weight="0.37"
                app:srcCompat="@drawable/camera" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="500dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">
</android.support.constraint.ConstraintLayout>
